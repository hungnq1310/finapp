# Financial News Analysis Backend Configuration

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=financial_news

# Windmill Configuration
WINDMILL_BASE_URL=http://localhost:8000
WINDMILL_TOKEN=your_windmill_token_here
WINDMILL_WORKSPACE=finops

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true

# RSS Crawler Configuration
CRAWLER_BASE_URL=https://vietstock.vn/rss
CRAWLER_BASE_DOMAIN=https://vietstock.vn
CRAWLER_OUTPUT_DIR=data/vietstock
CRAWLER_INTERVAL_MINUTES=5
CRAWLER_EXTRACT_HTML=false
CRAWLER_HTML_EXTRACTION_DELAY=2.0
CRAWLER_HTML_BATCH_SIZE=10

# Logging
LOG_LEVEL=INFO

# Optional: Redis for caching (if using in Windmill flows)
REDIS_URL=redis://localhost:6379

# Optional: Authentication
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
