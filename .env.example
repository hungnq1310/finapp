# Financial News Analysis Backend Configuration

# ============================================================================
# Storage Configuration
# ============================================================================
STORAGE_TYPE=hybrid
STORAGE_BASE_DIR=data
STORAGE_COMPRESSION=false

# ============================================================================
# MongoDB Configuration (REQUIRED)
# ============================================================================
MONGODB_URI=mongodb://localhost:27017
DATABASE_NAME=financial_news

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8002
API_RELOAD=true

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_DIR=data/extracted/logs

# ============================================================================
# RSS Crawler Configuration
# ============================================================================
# Multi-source crawler settings
CRAWLER_SOURCES=vietstock
CRAWLER_OUTPUT_DIR=data
CRAWLER_INTERVAL_MINUTES=5
CRAWLER_EXTRACT_HTML=false
CRAWLER_RATE_LIMIT_DELAY=1.0
CRAWLER_SUBCATEGORY_DELAY=0.5
CRAWLER_REQUEST_TIMEOUT=30
CRAWLER_HTML_EXTRACTION_DELAY=2.0
CRAWLER_HTML_BATCH_SIZE=10

# Vietstock-specific settings
VIETSTOCK_BASE_URL=https://vietstock.vn/rss
VIETSTOCK_BASE_DOMAIN=https://vietstock.vn
VIETSTOCK_RSS_URL=https://vietstock.vn/rss
VIETSTOCK_OUTPUT_DIR=data/vietstock
VIETSTOCK_HTML_DELAY=2.0
VIETSTOCK_HTML_BATCH_SIZE=10

# CafeF-specific settings (if using)
CAFEF_BASE_URL=https://cafef.vn/rss
CAFEF_BASE_DOMAIN=https://cafef.vn
CAFEF_RSS_URL=https://cafef.vn/rss
CAFEF_OUTPUT_DIR=data/cafef
CAFEF_HTML_DELAY=3.0
CAFEF_HTML_BATCH_SIZE=5

# VietnamFinance-specific settings (if using)
VIETNAMFINANCE_BASE_URL=https://vietnamfinance.vn/rss
VIETNAMFINANCE_BASE_DOMAIN=https://vietnamfinance.vn
VIETNAMFINANCE_RSS_URL=https://vietnamfinance.vn/rss
VIETNAMFINANCE_OUTPUT_DIR=data/vietnamfinance
VIETNAMFINANCE_HTML_DELAY=2.5
VIETNAMFINANCE_HTML_BATCH_SIZE=8

# Tuoi Tre-specific settings (if using)
TUOITRE_BASE_URL=https://tuoitre.vn/rss
TUOITRE_BASE_DOMAIN=https://tuoitre.vn
TUOITRE_RSS_URL=https://tuoitre.vn/rss/tai-chinh-kinh-doanh.rss
TUOITRE_OUTPUT_DIR=data/tuoitre

# VnExpress-specific settings (if using)
VNEXPRESS_BASE_URL=https://vnexpress.net/rss
VNEXPRESS_BASE_DOMAIN=https://vnexpress.net
VNEXPRESS_RSS_URL=https://vnexpress.net/rss/kinh-doanh.rss
VNEXPRESS_OUTPUT_DIR=data/vnexpress

# ============================================================================
# LLM Extractor Configuration
# ============================================================================
# OpenRouter API for LLM extraction (REQUIRED for LLM features)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI API (if using OpenAI directly)
OPENAI_API_KEY=your_open_ai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4

# Custom LLM Provider (if using custom endpoint)
CUSTOM_LLM_PROVIDER=custom
CUSTOM_LLM_API_KEY=your_custom_api_key_here
CUSTOM_LLM_BASE_URL=https://api.example.com/v1
CUSTOM_LLM_MODEL_NAME=gpt-4.1-nano-2025-04-14

# LLM Model settings (applies to all providers)
LLM_MODEL_NAME=anthropic/claude-3.5-sonnet
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Extractor settings
EXTRACTOR_BATCH_SIZE=5
EXTRACTOR_DELAY_SECONDS=1.0
EXTRACTOR_OUTPUT_DIR=data/extracted

# ============================================================================
# Master JSON Configuration
# ============================================================================
MASTER_JSON_DIR=data/master

# ============================================================================
# Windmill Configuration (Optional - for workflow automation)
# ============================================================================
WINDMILL_BASE_URL=http://localhost:8000
WINDMILL_TOKEN=your_windmill_token_here
WINDMILL_WORKSPACE=finops

# ============================================================================
# Redis Configuration (Optional - for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Authentication (Optional)
# ============================================================================
JWT_SECRET_KEY=your_jwt_secret_here
JWT_ALGORITHM=HS256
